@model FilmViewModel

@{
    ViewData["Title"] = "AddFilm";
}

<h4>Добавление нового фильма</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddFilm" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearRelease" class="control-label"></label>
                <input asp-for="YearRelease" class="form-control" />
                <span asp-validation-for="YearRelease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDirector" class="control-label"></label>
                <input asp-for="MovieDirector" class="form-control" />
                <span asp-validation-for="MovieDirector" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Poster" class="control-label"></label>
                <input name="img" type="file" class="form-control" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
